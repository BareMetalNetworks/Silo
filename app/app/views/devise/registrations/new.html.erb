
<div id="login-main">
    <div id="login">
        
        <div class="container">

     <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">

 <h3 class="page-section-heading text-center text-uppercase  text-light">Sign Up</h3>
        
                <!-- Icon Divider-->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fa fa-tractor"></i></div>
                    <div class="divider-custom-line"></div>
                </div>






<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "text-light" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="field">
    <%= f.label :first_name, class: "text-light" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "text-light" %><br />
    <%= f.text_field :last_name %>
  </div>

    <div class="field">
    <%= f.label :phone_number, class: "text-light" %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-light" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "text-light" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn-success btn-large text-uppercase" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



                  </div>
                </div>
            </div>
        </div>
    </div>

</div>

