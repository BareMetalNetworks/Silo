


<div id="login-main">
    <div id="login">
        
        <div class="container">

     <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">

 <h3 class="page-section-heading text-center text-uppercase  text-light">Login</h3>
        
                <!-- Icon Divider-->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fa fa-tractor"></i></div>
                    <div class="divider-custom-line"></div>
                </div>

<%= form_for(resource,
             as: resource_name, 
             url: session_path(resource_name), 
             class: "login" ) do |f| %>

 <p>   <%= render "devise/shared/error_messages", resource: resource %>
    </p>


  <div class="field">
    <%= f.label :email, class: "text-light" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-light" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-light">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-align">
    <%= f.submit "Login", class: "btn-success btn-large text-uppercase" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>


                  </div>
                </div>
            </div>
        </div>
    </div>

</div>




      
  